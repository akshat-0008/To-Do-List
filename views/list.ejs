<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>   
    <div class="box">
        <% newItems.forEach(function(i){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= i._id %>" onchange="this.form.submit()">
                    <p><%= i.name %> </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>">
            </form>
        <% }) %>
        <form class="item" action="/" method="post">
            <input type="text" name="item" placeholder="Enter your task" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
<%- include("footer") -%>
